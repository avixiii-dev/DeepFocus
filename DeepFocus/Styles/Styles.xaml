<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Button Styles -->
    <Style x:Key="CircleButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource SurfaceBrush}" />
        <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="Width" Value="50" />
        <Setter Property="Height" Value="50" />
    </Style>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="24,12" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!-- TextBlock Styles -->
    <Style x:Key="TimerTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="72" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="CycleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="{ThemeResource TextSecondaryBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,8,0,0" />
    </Style>

    <!-- Panel Styles -->
    <Style x:Key="TimerPanelStyle" TargetType="StackPanel">
        <Setter Property="Background" Value="{ThemeResource SurfaceBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="Margin" Value="24" />
    </Style>
</ResourceDictionary>
